@model IEnumerable<WebBanHang.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
<style>
    .scrollbar {
        background-color: #F5F5F5;
        float: left;
        height: 549px;
        margin-bottom: 25px;
        margin-left: 0px;
        margin-top: 1px;
        width: 100%;
        overflow-y: scroll;
    }

    .force-overflow {
        min-height: 450px;
    }

    .card {
        text-align: center;
        width: 250px;
        border-radius: 5px;
        padding: 10px;
        box-shadow: 0 4px 8px 0 #3343b7;
        transition: 0.3s;
    }

    #margin-card {
        margin-top: 20px;
    }
</style>
<div class="container">
    <br />
    <div style="width:98%; margin:0 auto;">
        <h2 style="color:red; text-align:center"><strong>Danh sách sản phẩm</strong></h2>
        <div style="background-image: url('../../Content/Images/admin3.jpg');    height: 88px;">
            @using (Html.BeginForm("SearGiaTien", "Product", FormMethod.Get))
            {
                <div style="margin-left: 525px;">
                    <h4 style="color:orangered;text-align:center; margin-left: -147px;">Lọc theo giá </h4>

                    <input class="btn btn-danger" type="submit" value="lọc" style=" float: right; margin-right: 147px;margin-top: -4px;" />

                    <b style="color: black;">

                        @Html.TextBox("min") - @Html.TextBox("max")
                    </b>
                </div>
            }
            <div class="dropdown" style=" float: right; margin-right: -182px;margin-top: -28px; ">
                <button class="btn btn-danger dropdown-toggle" type="button" data-toggle="dropdown">
                    Lọc theo thứ tự
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li><a href="/Product/MatHangDonGiaGiamDan">Đơn giá giảm dần</a></li>
                    <li><a href="/Product/MatHangDonGiaTangDan">Đơn giá tăng dần</a></li>
                </ul>
            </div>

        </div>

        <table id="scrollbar" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <tbody>
                @foreach (var item in Model)
                {

                    <div class="col-sm-5 col-md-5 col-lg-3" id="margin-card">
                        <div class="card">
                            <h3 style="color:red">@Html.DisplayFor(modelItem => item.Category.NameCategory)</h3>
                            <a><img src="@Url.Content(item.Images)" style="height:200px; width:200px" /></a>
                            <img src="https://hanoicomputercdn.com/media/news/1701_hot.gif" class="" style=" height: 33px; margin-left: 142px; margin-top: -424px;" />

                            <H4>@Html.DisplayFor(model => item.NameProduct)</H4>
                            <p class="strike"> <strike> @Html.DisplayFor(model => item.UnitPrice) <sup>đ</sup></strike> </p>
                            <p class="giatien">@Html.DisplayFor(model => item.UnitPrice)<sup><u>đ</u></sup> </p>
                            <a class="btn btn-danger" href="/Product/Details/@item.IDProduct">
                                Chi tiết
                            </a>
                            <a href="/ShoppingCart/AddToCart/@item.IDProduct"><img src="@Url.Content("~/Content/Images/cart.png")" style="height:40px; width:40px;" /></a>
                        </div>

                    </div>
                }
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="6">
                            No row to seach...
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#scrollbar').DataTable({

        });
    });
</script>

