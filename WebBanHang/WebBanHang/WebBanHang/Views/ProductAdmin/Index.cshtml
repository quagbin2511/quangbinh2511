@model IEnumerable<WebBanHang.Models.Product>

@{
    ViewBag.Title = "IndexUser";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";


}

<h2 style="color:red; text-align:center;"><strong>Sản phẩm manager</strong></h2>

<p style="margin-left: 98px;">
    @Html.ActionLink("Create New", "Create")
</p>
<div class="container">
    <br />
    <div style="width:98%; margin:0 auto;    float: left; margin-left: -77px;">
        <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NameProduct)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Images)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Available)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descriptions)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category.NameCategory)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameProduct)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        <img src="@Url.Content(item.Images)" style="height:40px; width:40px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Available)
                    </td>
                    
                    <td>
                        <textarea class="col-sm-13" cols="20" rows="5" type="text" id="noidung" name="noidung">@Html.DisplayFor(modelItem => item.Descriptions)</textarea>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.NameCategory)
                    </td>
                    <td>
                        <button type="button" style="border-radius: 8px;background-color: navajowhite;"><a style="color:white;">@Html.ActionLink("Edit", "Edit", new { id = item.IDProduct })</a> </button>
                        <br />
                        <button type="button" style="border-radius: 8px;background-color: navajowhite;"><a style="color:white;">@Html.ActionLink("Details", "Details", new { id = item.IDProduct })</a> </button>
                        <br />
                        <button type="button" style="border-radius: 8px;background-color: navajowhite;"><a style="color:white;">@Html.ActionLink("Delete", "Delete", new { id = item.IDProduct })</a> </button>
                    </td>
                </tr>
                }
            </tbody>



        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#demoGrid').DataTable({

        });
    });
</script>









